---
import "@fontsource/geist-sans/400.css";
import "@fontsource/geist-sans/500.css";
import "@fontsource/geist-sans/700.css";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="pt-BR">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="DoctorCare description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  ul {
    list-style: none;
  }

  a {
    text-decoration: none;
    cursor: pointer;
  }

  button {
    cursor: pointer;
  }

  :root {
    --hue: 170;

    /* Primary Colors */
    --brand: hsl(var(--hue), 100%, 26%);
    --brand-light: hsl(calc(var(--hue) - 22), 23%, 89%);
    --brand-light-second: hsl(calc(var(--hue) + 10), 14%, 97%);
    --brand-hover: hsl(var(--hue), 100%, 26%, 0.9);

    /* Base colors */
    --background: hsl(0, 0%, 98%);
    --foreground: hsl(150, 8%, 5%);
    --muted: hsl(calc(var(--hue) + 10), 6%, 93%);
    --muted-foreground: hsl(calc(var(--hue) - 3), 6%, 45%);
  }

  html,
  body {
    scroll-behavior: smooth;
  }

  body {
    font-family: "Geist Sans", sans-serif;
    -webkit-font-smoothing: antialiased;
    min-height: 100vh;
    background-color: var(--brand-light);
  }

  a {
    color: var(--muted-foreground);
  }

  .container {
    width: 100%;
    margin: 0 auto;
    padding: 0 2rem;
  }
  @media (min-width: 640px) {
    .container {
      max-width: 640px;
      padding: 0 1rem;
    }
  }
  @media (min-width: 768px) {
    .container {
      max-width: 768px;
    }
  }
  @media (min-width: 1024px) {
    .container {
      max-width: 1024px;
    }
  }
  @media (min-width: 1280px) {
    .container {
      max-width: 1280px;
    }
  }
  @media (min-width: 1400px) {
    .container {
      max-width: 1400px;
    }
  }
  @media (min-width: 1536px) {
    .container {
      max-width: 1536px;
    }
  }

  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border-width: 0;
  }

  .btn {
    all: unset;

    border: 1px solid;
    border-radius: 2.5rem;

    display: inline-flex;
    align-items: center;
    justify-content: center;

    font-size: 0.875rem;
    font-weight: 500;
    white-space: nowrap;

    cursor: pointer;

    transition-property: color, background-color, border-color,
      text-decoration-color, fill, stroke;
    transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
    transition-duration: 150ms;
  }

  .btn:disabled {
    opacity: 50%;
  }

  .btn-primary {
    text-transform: uppercase;

    padding: 1rem 2rem;

    color: var(--background);
    border-color: var(--brand);
    background-color: var(--brand);
  }

  .btn-primary:hover {
    background-color: var(--brand-hover);
  }

  .btn-primary:active {
    background-color: var(--brand);
  }

  .btn-outline {
    text-transform: uppercase;

    padding: 0.625rem 1.5rem;

    color: var(--brand);
    border-color: var(--brand);
    background-color: transparent;
  }

  .btn-outline:hover {
    color: var(--background);
    border-color: var(--brand);
    background-color: var(--brand);
  }

  .btn-outline:active {
    color: var(--brand);
    border-color: var(--brand);
    background-color: transparent;
  }
</style>
